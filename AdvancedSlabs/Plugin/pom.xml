        <!--</dependency>-->
        <dependency>
            <groupId>org.inventivetalent</groupId>
            <artifactId>glowapi</artifactId>
            <version>[1.3.1,)</version>
        </dependency>
        <dependency>
            <groupId>org.inventivetalent</groupId>
            <artifactId>particleapi</artifactId>
            <version>[2.0.0,)</version>
        </dependency>
    </dependencies>


</project>